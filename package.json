{
	"private": true,
	"name": "pipes-workspace",
	"keywords": [],
	"author": "Matej Bransky",
	"license": "ISC",
	"description": "",
	"scripts": {
		"dev": "pnpm --filter client dev",
		"preinstall": "npx only-allow pnpm",
		"check:format": "prettier --check \"{,!(server|client)/**/*}\" --no-error-on-unmatched-pattern && pnpm run --recursive --parallel --if-present check:format",
		"check:lint": "eslint \"{,!(server|client)/**/*}.{js,jsx,ts,tsx}\" --no-error-on-unmatched-pattern && pnpm run --recursive --parallel --if-present check:lint",
		"check:types": "pnpm run --recursive --parallel --if-present check:types",
		"format": "prettier --check --write \"{,!(server|client)/**/*}\" --no-error-on-unmatched-pattern && pnpm run --recursive --parallel --if-present format",
		"lint": "eslint \"{,!(server|client)/**/*}.{js,jsx,ts,tsx}\" --fix --no-error-on-unmatched-pattern && pnpm run --recursive --parallel --if-present lint"
	},
	"devDependencies": {
		"@utilize/eslint-config": "^2.2.0",
		"@utilize/prettier-config": "^1.1.0",
		"eslint": "^8.20.0",
		"prettier": "^2.7.1",
		"typescript": "^4.6.4"
	},
	"engines": {
		"node": ">=16",
		"pnpm": ">=7"
	},
	"eslintConfig": {
		"extends": "@utilize/eslint-config"
	},
	"prettier": "@utilize/prettier-config"
}
